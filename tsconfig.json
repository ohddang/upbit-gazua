{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "es6",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist"]
}
